{
    "manifest_version": 3,
    "name": "Lichess Broadcast Brett-Tracker",
    "version": "1.0",
    "description": "Sends current board number, total number of boards, and turn color to a local python server.",
    "permissions": ["storage", "scripting", "activeTab"],
    "host_permissions": ["https://lichess.org/broadcast/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://lichess.org/broadcast/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }